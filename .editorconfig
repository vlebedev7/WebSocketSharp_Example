root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf

[*.cs]
indent_size = 4
indent_style = space

[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.cshtml]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

# Code-block preferences
csharp_prefer_simple_using_statement = true:suggestion